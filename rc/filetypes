highlight clear Error
highlight clear Spellbad
highlight link Spellbad javascriptDebug
highlight link Error javascriptDebug
" }}}
" {{{ FILETYPE OPTIONS
" go stuff
set rtp+=$GOPATH/src/github.com/golang/lint/misc/vim

au BufRead,BufNewFile jquery.*.js set ft=javascript syntax=jquery
au BufRead,BufNewFile *.less set filetype=less
au BufRead,BufNewFile *.vala set filetype=vala
au BufRead,BufNewFile *.coffee set filetype=coffee
au BufRead,BufNewFile *.cpy set filetype=cpy syntax=cpy
au BufRead,BufNewFile *.php set filetype=hack syntax=hack
au BufRead,BufNewFile TODO set filetype=markdown syntax=markdown

set suffixesadd+=.js
set cinoptions=cino-l

filetype plugin on


" }}}

